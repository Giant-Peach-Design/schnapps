    <g id="arrow" transform="translate(1)">
      <path id="Path_2233" data-name="Path 2233" d="M11.5,0A11.5,11.5,0,0,1,23,11.5" transform="translate(-11.5 24.5)" fill="none"  stroke-linecap="square" stroke-width="2"/>
