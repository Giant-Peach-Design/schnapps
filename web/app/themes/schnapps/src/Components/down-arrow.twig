</button>

<script>
  document.addEventListener('alpine:init', () => {
    Alpine.data('downarrow', () => ({
      click() {
        const parentSection = this.$refs.btn.closest('section');
        const nextSection = parentSection.nextElementSibling;

        nextSection?.scrollIntoView({
          behavior: 'smooth'
        });
      }
    }))
  });
</script>
